<Application x:Class="分区助手.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:分区助手"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--颜色-->
        <SolidColorBrush x:Key="ThemeColor" Color="#FF2A90FF"/>
        <SolidColorBrush x:Key="HeavyBackgroundColor" Color="#FF101011" ></SolidColorBrush>
        <SolidColorBrush x:Key="MediumBackgroundColor" Color="#FF212125"></SolidColorBrush>
        <SolidColorBrush x:Key="LightBackgroundColor" Color="#FF333333"/>

        <!--控件-->
        <Style x:Key="MainTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="{StaticResource HeavyBackgroundColor}"></Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="SideTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="{StaticResource LightBackgroundColor}"></Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="HighlightTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="{StaticResource ThemeColor}"></Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Application.Resources>
</Application>

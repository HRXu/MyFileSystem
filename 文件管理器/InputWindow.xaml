<Window x:Class="文件管理器.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:文件管理器"
        mc:Ignorable="d"
        Title="InputWindow" Height="110" Width="220">
    <StackPanel>
        <TextBlock Margin="5">输入文件名</TextBlock>
        <TextBox x:Name="inputbox" Margin="5,0,5,5"></TextBox>
        <Button Margin="5,0,5,5" Click="Button_Click">Ok</Button>
    </StackPanel>
</Window>
